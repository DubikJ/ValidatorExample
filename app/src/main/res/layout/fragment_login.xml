<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/banner"
            app:layout_constraintBottom_toTopOf="@+id/layout_password"/>

        <RelativeLayout
            android:id="@+id/layout_password"
            android:layout_width="@dimen/edit_text_pass_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_edit_pass_white"
            app:layout_constraintLeft_toLeftOf="@+id/buttonPanel"
            app:layout_constraintRight_toRightOf="@+id/buttonPanel"
            app:layout_constraintBottom_toTopOf="@+id/buttonPanel">

            <ImageButton
                android:id="@+id/password_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/progress_bar"
                android:layout_alignBottom="@+id/progress_bar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                app:srcCompat="@drawable/show_pass_image_button"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/tv_password"
                style="@style/TextStyle_Large_Accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/password_show"
                android:ems="12"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnEnter"
            style="@style/TextStyle_Large_White"
            android:layout_width="@dimen/login_button_size"
            android:layout_height="@dimen/login_button_size"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/button_login_background_send"
            app:layout_constraintLeft_toRightOf="@+id/layout_password"
            app:layout_constraintTop_toTopOf="@+id/layout_password"
            app:layout_constraintBottom_toBottomOf="@+id/layout_password"/>

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.700">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFingerPrint"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background_fingerprint" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background"
                    android:text="0" />

                <Button
                    android:id="@+id/btnClear"
                    style="@style/TextStyle_Large_White"
                    android:layout_width="@dimen/login_button_size"
                    android:layout_height="@dimen/login_button_size"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/button_login_background_clear" />

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_white"
        tools:ignore="VectorDrawableCompat" />

</android.support.constraint.ConstraintLayout>
